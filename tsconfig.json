{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "types": [],
    "declaration": true,
    "sourceMap": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "lib"
  },
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
